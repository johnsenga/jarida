<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
     android:background="@drawable/patternbck"
    android:layout_height="fill_parent" 
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.example.jarida.views.ScaleImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@null" />

     <RelativeLayout

         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:background="#77000000" 
         >

                <RelativeLayout
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                    <View
                            android:id="@+id/friendship_divider"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="4dip"
                            android:layout_marginTop="4dip"
                            android:background="#fff"
                            />
					<ImageView
                        android:id="@+id/imgAddCart"
                        android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_alignParentRight="true"
					    android:layout_alignParentTop="true"
					    android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/addtocartwhite"
                        android:layout_alignParentBottom="true"
					    android:layout_toRightOf="@+id/friendship_divider"
                        />

                </RelativeLayout>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/textViewprclbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="Price:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fff" 
                    android:textSize="18sp"
                    app:typeface="roboto_slab_regular"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/TextViewActPrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textViewprclbl"
                    android:text="$3.00"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fff" 
                    android:textSize="18sp"
                    app:typeface="roboto_slab_thin" />

        </RelativeLayout>
</RelativeLayout>