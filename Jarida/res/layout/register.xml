<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/purple_background"
    android:layout_height="match_parent" >

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/registerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerEmail"
        android:layout_alignLeft="@+id/registerEmail"
        android:layout_alignRight="@+id/registerEmail"
        android:layout_marginBottom="39dp"
        android:background="@drawable/white_background"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:typeface="roboto_slab_thin" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/registerPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegister"
        android:layout_alignLeft="@+id/registerEmail"
        android:layout_alignRight="@+id/btnRegister"
        android:layout_marginBottom="132dp"
        android:background="@drawable/white_background"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:typeface="roboto_slab_thin" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/registerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerPassword"
        android:layout_alignLeft="@+id/btnRegister"
        android:layout_alignRight="@+id/btnRegister"
        android:layout_marginBottom="48dp"
        android:background="@drawable/white_background"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:typeface="roboto_slab_thin" >

        <requestFocus />
    </com.devspark.robototextview.widget.RobotoEditText>

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/green_background"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:typeface="roboto_slab_thin" />

</RelativeLayout>