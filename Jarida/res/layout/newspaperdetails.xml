                    android:text="@string/loren_ipsum"
                    android:textAppearance="@android:style/TextAppearance.Medium" 
                    android:textColor="@color/black" 
                    android:textSize="18sp"
                    app:typeface="roboto_slab_regular"/>

</LinearLayout>