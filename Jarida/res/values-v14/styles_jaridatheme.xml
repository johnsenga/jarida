<resources>

    <style name="Theme.Jaridatheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_jaridatheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Jaridatheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Jaridatheme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Jaridatheme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Jaridatheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Jaridatheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_jaridatheme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_jaridatheme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Jaridatheme</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Jaridatheme.Widget</item>

    </style>

    <style name="ActionBar.Solid.Jaridatheme" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_jaridatheme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_jaridatheme</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_jaridatheme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Jaridatheme</item>
    </style>

    <style name="ActionBar.Transparent.Jaridatheme" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_jaridatheme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Jaridatheme</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Jaridatheme.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Jaridatheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Jaridatheme</item>
    </style>

</resources>