<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/purple_background"
    android:layout_height="match_parent" >

    

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLinkToRegisterScreen"
        android:layout_alignBottom="@+id/tvLinkToRegisterScreen"
        android:layout_toLeftOf="@+id/tvLinkToRegisterScreen"
        android:text="New?"
        android:textSize="18sp"
        app:typeface="roboto_slab_thin"
        android:textColor="@color/black"
        />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tvLinkToRegisterScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/loginPassword"
        android:layout_marginBottom="23dp"
        android:text="Register here"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:typeface="roboto_slab_thin" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/loginEmail"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/white_background"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/loginPassword"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginEmail"
        android:layout_below="@+id/loginEmail"
        android:layout_marginTop="26dp"
        android:background="@drawable/white_background"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/btnLogin"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginPassword"
        android:layout_below="@+id/loginPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_background"
        android:text="Login"
        android:textColor="@color/white" />

</RelativeLayout>